<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="17"
            android:columnCount="2"
            android:layout_gravity="right" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group"
                android:id="@+id/ProductTextGroupID"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/name"
                android:id="@+id/ProductTextName"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp" />

            <com.kimia.kimia.InstantAutoComplete
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:id="@+id/ProductEditGroupID"
                android:selectAllOnFocus="true"
                android:textSize="25sp" />

            <com.kimia.kimia.InstantAutoComplete
                android:layout_height="wrap_content"
                android:id="@+id/ProductEditName"
                android:layout_width="150dp"
                android:textSize="25sp"
                android:selectAllOnFocus="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/maker"
                android:id="@+id/ProductTextMaker"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />


            <com.kimia.kimia.InstantAutoComplete
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/ProductEditMaker"
                android:selectAllOnFocus="true"
                android:textSize="25sp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cod"
                android:id="@+id/ProductTextCod"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ProductEditCod"
                android:text="@string/cod"
                android:textSize="25sp"
                android:layout_gravity="center_vertical"
                android:ems="5"
                android:gravity="start"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:selectAllOnFocus="true"
                android:inputType="number" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tip"
                android:id="@+id/ProductTextTip"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:selectAllOnFocus="true"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ProductEditTip"
                android:text="@string/tip"
                android:textSize="25sp"
                android:ems="5"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:selectAllOnFocus="true"
                android:clickable="false"
                android:focusable="true"
                android:focusableInTouchMode="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visible"
                android:id="@+id/ProductTextVisible"
                android:textSize="25sp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ProductSwitchVisible"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:paddingStart="20dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_columnSpan="2"/>


        </GridLayout>

    </ScrollView>

</RelativeLayout>