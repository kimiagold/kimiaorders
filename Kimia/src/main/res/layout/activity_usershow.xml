<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rowCount="17"
            android:columnCount="3"
            android:layout_gravity="right">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/group"
                android:id="@+id/textgroup"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/name"
                android:id="@+id/textname"
                android:layout_row="2"
                android:layout_column="0"
                android:textSize="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cod"
                android:id="@+id/textcod"
                android:layout_row="12"
                android:layout_column="0"
                android:textSize="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />


            <TextView
                android:layout_height="wrap_content"
                android:id="@+id/editname"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="@string/name"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"
                android:layout_columnSpan="2"
                android:gravity="start"
                android:paddingStart="20dp" />

            <Spinner
                android:id="@+id/spinnergroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_alignTop="@+id/textgroup"
                android:layout_gravity="center_vertical"
                android:layout_columnSpan="2"
                android:gravity="start"
                android:paddingStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editcod"
                android:text="@string/cod"
                android:textSize="25dp"
                android:layout_row="12"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_columnSpan="2"
                android:gravity="start"
                android:paddingStart="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edittel"
                android:text="@string/tel"
                android:layout_row="6"
                android:layout_column="1"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"
                android:layout_columnSpan="2"
                android:gravity="start"
                android:paddingStart="20dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editmob"
                android:text="@string/mobile"
                android:layout_row="8"
                android:layout_column="1"
                android:ems="10"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"
                android:layout_columnSpan="2"
                android:gravity="start"
                android:paddingStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/editfax"
                android:layout_row="10"
                android:layout_column="1"
                android:text="@string/fax"
                android:textSize="25dp"
                android:layout_gravity="center_vertical"
                android:layout_columnSpan="2"
                android:gravity="start"
                android:paddingStart="20dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchpre"
                android:layout_row="4"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_columnSpan="2"
                android:gravity="start"
                android:paddingStart="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edittip"
                android:text="@string/tip"
                android:textSize="25dp"
                android:layout_row="14"
                android:layout_column="1"
                android:layout_gravity="center_vertical"
                android:layout_columnSpan="2"
                android:gravity="start"
                android:paddingStart="20dp" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="16"
                android:layout_column="1"
                android:id="@+id/switchevis"
                android:layout_gravity="center_vertical"
                android:layout_columnSpan="2"
                android:gravity="start"
                android:paddingStart="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mobile"
                android:id="@+id/textmob"
                android:layout_row="8"
                android:layout_column="0"
                android:textSize="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/visible"
                android:id="@+id/textvis"
                android:textSize="25dp"
                android:layout_row="16"
                android:layout_column="0"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/preference"
                android:id="@+id/textpre"
                android:layout_row="4"
                android:layout_column="0"
                android:textSize="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tip"
                android:id="@+id/texttip"
                android:layout_row="14"
                android:layout_column="0"
                android:textSize="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fax"
                android:id="@+id/textfax"
                android:textSize="25dp"
                android:layout_row="10"
                android:layout_column="0"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tel"
                android:layout_row="6"
                android:layout_column="0"
                android:id="@+id/texttel"
                android:textSize="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:gravity="start"
                android:paddingStart="20dp"
                android:paddingEnd="10dp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:layout_row="1"
                android:layout_column="0"
                android:background="@android:color/darker_gray"
                android:layout_columnSpan="3"/>




            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:layout_row="3"
                android:layout_column="0"
                android:background="@android:color/darker_gray"
                android:layout_columnSpan="3"/>


            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:layout_row="5"
                android:layout_column="0"
                android:background="@android:color/darker_gray"
                android:layout_columnSpan="3"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:layout_row="7"
                android:layout_column="0"
                android:background="@android:color/darker_gray"
                android:layout_columnSpan="3"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:layout_row="9"
                android:layout_column="0"
                android:background="@android:color/darker_gray"
                android:layout_columnSpan="3"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:layout_row="11"
                android:layout_column="0"
                android:background="@android:color/darker_gray"
                android:layout_columnSpan="3"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:layout_row="13"
                android:layout_column="0"
                android:background="@android:color/darker_gray"
                android:layout_columnSpan="3"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"

                android:layout_row="15"
                android:layout_column="0"
                android:background="@android:color/darker_gray"
                android:layout_columnSpan="3"/>




        </GridLayout>

    </ScrollView>

</RelativeLayout>